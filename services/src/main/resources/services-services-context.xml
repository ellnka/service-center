       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

       <import resource="classpath*:services-jdbc-context.xml"/>
       <context:annotation-config/>

       <bean id="userService" class="com.source.it.services.UserService"/>
       <bean id="userRoleService" class="com.source.it.services.UserRoleService"/>
       <bean id="orderService" class="com.source.it.services.OrderService"/>
       <bean id="itemService" class="com.source.it.services.ItemService"/>
</beans>